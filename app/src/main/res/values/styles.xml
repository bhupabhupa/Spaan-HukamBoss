<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--item name="colorAccent">@color/colorAccent</item -->
        <item name="colorAccent">#3F51B5</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="TextLable" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#3F51B5</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="colorAccent">#3F51B5</item>
        <!--item name="android:layout_marginBottom">10dp</item-->
        <!--item name="android:layout_marginTop">15dp</item-->
        <item name="android:padding">5dp</item>
        <!--<item name="android:paddingLeft">2dp</item>-->
        <!--<item name="android:paddingRight">2dp</item>-->
    </style>

    <style name="TextLableReadOnly" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#808080</item>
        <item name="android:textColor">#808080</item>
        <item name="colorAccent">#808080</item>
        <!--item name="android:layout_marginBottom">10dp</item-->
        <!--item name="android:layout_marginTop">15dp</item-->
        <item name="android:padding">5dp</item>
        <!--<item name="android:paddingLeft">2dp</item>-->
        <!--<item name="android:paddingRight">2dp</item>-->
    </style>

    <style name="TextView">
        <item name="android:padding">5dp</item>
    </style>


    <style name="ErrorView" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#3F51B5</item>
    </style>

    <style name="MySpinner">
        <item name="android:theme">@style/Base.Widget.AppCompat.DropDownItem.Spinner</item>
    </style>

    <style name="AutoTextLable" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#3F51B5</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="android:padding">2.5dp</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#FF0000</item>
    </style>


    <style name="SpinnerLable" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#3F51B5</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="android:padding">2dp</item>
    </style>

</resources>
